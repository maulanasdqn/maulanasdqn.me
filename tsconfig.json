{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@util/*": ["utilities/*"],
      "@modules/*": ["modules/*"]
    }
  },
  "include": ["src"]
}
